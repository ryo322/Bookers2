<h2>User info</h2>
  <% if current_user.profile_image.attached? %>
   <%= image_tag current_user.profile_image %>
  <% else %>
   <%= image_tag "default-image.jpg" %>
  <% end %>
 <table class="table">
   <tbody>
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th></th>
     </tr>
   </tbody>
  </table>
  <div class="row">
   <a class="btn btn-outline-secondary btn-block" href="/users/<%= current_user.id %>">
    <i class="fa-solid fa-user-gear" style="color: #5c5e60;"></i>
   </a>
  </div>
<h2 class="mt-3">New book</h2>
 <%= form_with model: Book.new do |f| %>
 <div class="form-group">
  <p >Title</p>
  <%= f.text_field :title %>
 </div>
 <div class="form-group">
  <p>Opinion</p>
  <%= f.text_area :body %>
 </div>
 <div class="form-group">
  <%= f.submit "Create Book", class: "btn btn-success btn-sm" %>
 </div>
 <% end %>
