<div class="container mt-3">
 <div class="row">
   <div class="mx-auto">
    <%= form_with model: @user do |f| %>
    <h2>User info</h2>
     <% if @user.errors.any? %>
      <%= @user.errors.count %> errors prohibited this obj from being saved:
      <ul>
       <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
      <% end %>
    <div>
     <%= f.label :name %><br>
     <%= f.text_field :name %>
    </div>
    <div>
     <%= f.label :image %><br>
     <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
    <div>
     <%= f.label :introduction %><br>
     <%= f.text_area :introduction %>
    </div>
    <%= f.submit "Update User", class: "btn btn-secondary btn-sm" %>
    <% end %>
   </div>
  </div>
 </div>