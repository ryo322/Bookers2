<div class="container">
 <div class="row">
   <div class="mx-auto">
    <%= form_with model: @user do |f| %>
    <h2>User info</h2>
    <div>
     <%= f.label :name %><br>
     <%= f.text_field :name %>
    </div>
    <div>
     <%= f.label :image %><br>
     <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
    <div>
     <%= f.label :introduction %><br>
     <%= f.text_area :body %>
    </div>
    <%= f.submit "Update User", class: "btn btn-secondary btn-sm" %>
    <% end %>
   </div>
  </div>
 </div>