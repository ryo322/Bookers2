<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users' %>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
         <% @user.books.each do |book| %>
      　　<tr>
      　　   <td><%= image_tag @user.get_profile_image %></td>
           <td><%= link_to book.title, book_path(book) %></td>
           <td><%= book.body %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
  </div>
</div>