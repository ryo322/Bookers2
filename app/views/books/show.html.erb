<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user' %>
    <div class="col-md-1"></div>
    <div class="col-md-8">
     <h2>Book detail</h2>
     <table class="table">
       <% @books.each do |book| %>
       <tr>
         <td></td>
         <td><%= link_to book.title, "/books/#{book.id}" %></td>
         <td><%= @book.body %></td>
         <td>
          <a class="btn btn-success btn-sm btn-block" href="/books/edit">Edit</a>
         </td>
         <td>
           <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm btn-block" %>
         </td>
       </tr>
     </table>
    </div>
    </div>
  </div>
</div>