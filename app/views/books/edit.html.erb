<div class="container mt-3">
  <div class="row">
    <div class="mx-auto">
      <h1>Editing Book</h1>
       <% if @book.errors.any? %>
       <%= @book.errors.count %> errors prohibited this obj from being saved:
       <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
       </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
      <div>
        <p >Title</p>
        <%= f.text_field :title %>
      </div>
      <div>
       <p>Opinion</p>
       <%= f.text_area :body %>
      </div>
      <%= f.submit "Update Book", class: "btn btn-success btn-sm" %>
      <% end %>
       <%= link_to "Show", book_path(@book.id) %>
        | 
       <%= link_to "Back", '/books' %>
    </div>
  </div>
</div>