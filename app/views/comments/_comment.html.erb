<% @book.comments.each do |comment| %>
  <tr>
    <td>
      <%= image_tag comment.user.get_profile_image, width: 80, height: 80 %>
      <%= comment.user.name %>
      <%= comment.comment %>
      <% if comment.user == current_user %>
      <%= link_to "Destroy", book_comment_path(@book, comment), method: :delete, remote:true, data: {"turbolinks" => false}, class: "btn btn-danger btn-sm" %>
      <% end %>
    </td>
  </tr>
<% end %>